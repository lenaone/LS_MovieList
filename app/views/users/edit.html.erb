<%= form_tag '/users/edit', method: 'put' do %>

  <h1 class="logo">Edit profile</h1>

  <div class="edit-form">

    <div class="avatar-wrapping">
      <%= image_tag(current_user.avatar, {class: "avatar"}) %>
      <ul class="avatar-dropdown hidden">
        <% ['avatar1.png', 'avatar2.png', 'avatar3.png', 'avatar4.png', 'avatar5.png'].each do |image|%>
        <li><%= image_tag(image, {class: 'select-avatar', data: { image: image }})%></li>
        <% end %>
      </ul>
    </div>

    <div class="form">
      <input class="inputAvatar" type="hidden" name="avatar" value="<%= current_user.avatar %>"/>

      <div class="name">
      <label for="">Name:</label>
      <input name="name" type="text" value="<%= current_user.name %>">
      </div>

      <div class="email">
      <label for="">Email:</label>
      <input name="email" type="text" value="<%= current_user.email %>">
      </div>

      <div class="password">
      <label for="">Password:</label>
      <input name="password" type="password" value="<%= current_user.password %>">
      </div>
      <button type="submit" id="edit" class="btn btn-primary">save</button>
    </div>

  </div>
<% end %>

